@model tskmProject.Models.Status

@{
    ViewBag.Title = "Status";
}
@using (Html.BeginForm("Status", "Tickets", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
   
    <div class="row">
        <h3 class="page-header">ใบงาน</h3>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.statusID, "สถานะ", new { @class = "col-md-2 control-label" })
                <div class="col-md-3">
                    @Html.DropDownList("statusID", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.statusID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-3">
                    <button type="submit" value="Create" class="btn btn-default">ยืนยันข้อมูล</button>
                    @Html.ActionLink("กลับสู่หน้าหลัก", "Index")
                </div>
            </div>
        </div>
    </div>
}