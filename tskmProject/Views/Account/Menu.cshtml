
@{
    ViewBag.Title = "เมนูหลัก";
}

@if (ViewBag.NumberOfAssignedTicket > 0 || ViewBag.NumberOfWaitingForClosingTicket > 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning" role="alert">
                @if (ViewBag.NumberOfAssignedTicket > 0)
                {
                    <div>You need to take action for <strong>@ViewBag.NumberOfAssignedTicket</strong> tickets.</div>
                }
                @if (ViewBag.NumberOfWaitingForClosingTicket > 0)
                {
                    <div>You need to close for <strong>@ViewBag.NumberOfWaitingForClosingTicket</strong> tickets.</div>
                }
            </div>
        </div>
    </div>
} 

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <h3 class="page-header">เมนูหลัก</h3>
        </div>

        @if (User.IsInRole("Admin") || User.IsInRole("IT Manager") || User.IsInRole("IT User"))
        {
            @Html.Partial("_ITMenu")
        }
        else
        {
            @Html.Partial("_OtherMenu")
        }
    </div>
</div>