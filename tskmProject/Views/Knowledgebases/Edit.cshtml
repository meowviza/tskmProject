@model tskmProject.Models.Knowledgebase

@{
    ViewBag.Title = "แก้ใบความรู้";
}

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
<br />
    <div class="form-horizontal">
        <h3>แก้ไขใบความรู้</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.knowledgeID)
        <div class="panel panel-default">
            <div class="panel-body">
                <br />
                <div class="form-group">
                    @Html.LabelFor(m => m.knowledgeTitle, "ชื่อเรื่อง", new { @class = "col-md-2 control-label" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.knowledgeTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.knowledgeTitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.catagoryID, "ประเภทใบความรู้", new { @class = "col-md-2 control-label" })
                    <div class="col-md-3">
                        @Html.DropDownList("catagoryID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.catagoryID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.knowledgeDate, "วันที่สร้างใบความรู้", new { @class = "col-md-2 control-label" })
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.knowledgeDate, new { @class = "form-control datepicker" })
                        @Html.ValidationMessageFor(model => model.knowledgeDate)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.knowledgeDetail, "รายละเอียดใบความรู้", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.knowledgeDetail, 10, 70, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.knowledgeDetail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">เอกสารประกอบ</label>
                    <div class="col-md-10">
                        @using (Html.BeginForm("Upload", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <input type="file" name="FileUpload" />

                        }
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" value="Create" class="btn btn-default">บันทึกข้อมูล</button>
                        @Html.ActionLink("กลับสู่หน้าหลัก", "Index")
                    </div>
                </div>
            </div>
        </div>
        </div>
            }



