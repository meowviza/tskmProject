@using DotNet.Highcharts;
@{
    ViewBag.Title = "สถิติการปฏิบัติงาน";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="page-header">สถิติการปฏิบัติงาน</h3>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                สถิติสถานะใบงานแบบรายเดือน
            </div>
            <div class="panel-body">
                @((Highcharts)ViewBag.TicketStatusRatioChart)
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                สถิติการเปิดและปิดใบงาน
            </div>
            <div class="panel-body">
                @((Highcharts)ViewBag.TicketOpenCloseStatChart)
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                แนวโน้มการสร้างและถาม-ตอบใบความรู้
            </div>
            <div class="panel-body">
                @((Highcharts)ViewBag.knowledgeCreateCommentStatChart)
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12 text-center">
        @Html.ActionLink("กลับสู่หน้าหลัก", "Index")
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/highcharts")
}